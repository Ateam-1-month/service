<% if current_user && current_user.is_student %>
    <div class="header-back"></div>
    <div class="header-container">
        <img class="uniwork-logo-link" alt="#" src="/assets/logotype/uniwork-logotype.png">
        <!--サーチバー-->
        <div class="link-search-container">
            <div class="header-search-link">
                <%= form_with(url: "#", class: "header-search-bar") do |f| %>
                    <%= f.text_field :search, placeholder: "ワードで検索する"  %>
                    <%= button_tag sanitize('<i class="fa fa-search"></i>'), :type => "submit" ,class:'header-search-button' %>
                <% end %>
            </div>
            <ul class="link-search-container">
                <li class="header-search-link hover-underline">
                    <a class="header-search-link hover-underline"　href="search">
                        <p class="header-search-link hover-underline">募集を探す</p>
                    </a>
                </li>
                <li class="header-search-link hover-underline">
                    <a class="header-search-link hover-underline"　href="search">
                        <p class="header-search-link hover-underline">企業を探す</p>
                    </a>
                </li>
            </ul>
        </div>
        <ul class="header-icon-container">
            <li><a href="#"><i class="header-icon fas fa-lg fa-calendar" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="header-icon fas fa-lg fa-comment-dots" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="header-icon fa fa-lg fa-question-circle" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="header-icon-mypage fas fa-2x fa-user-circle" aria-hidden="true"></i></a></li>
        </ul>
    </div>
<% elsif current_user && current_user.is_company %> 
<!-- ここに企業ヘッダーをかく -->
    <div class="header-container">
        <img class="uniwork-logo-link" alt="uniwork" src="/assets/logotype/uniwork-logotype.png">
        <!--サーチバー-->
        <div class="link-search-container">
            <div class="header-search-link">
                <%= form_with(url: "#", class: "header-search-bar") do |f| %>
                    <%= f.text_field :search, placeholder: "ワードで検索する"  %>
                    <%= button_tag sanitize('<i class="fa fa-search"></i>'), :type => "submit" ,class:'header-search-button' %>
                <% end %>
            </div>
            <ul class="link-search-container">
                <li class="header-search-link hover-underline">
                    <a href="search" class="header-search-link hover-underline">
                        <p class="header-search-link hover-underline">学生を探す</p>
                    </a>
                </li>
            </ul>
        </div>
        <ul class="header-icon-container">
            <li><a href="#"><i class="header-icon fa fa-lg fa-calendar-o" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="header-icon fa fa-lg fa-commenting-o" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="header-icon fa fa-lg fa-question-circle" aria-hidden="true"></i></a></li>
        </ul>
    </div>
<% else %>
    <!--ログインしてないとき-->
    <div class="header-container">
		<img alt="#" class="uniwork-logo-link" src="/assets/logotype/uniwork-logotype.png">
		<ul class="header-regist">
			<li class="header-regist">
				<p class="header-regist login-modal-show">ログイン</p>
			</li>
			<li class="header-regist">
				<p class="header-regist">企業の方はこちら</p>
			</li>
			<li class="header-regist">
                <ul class="header-regist">
				    <li><p>iOS/Androidアプリ</p></li>
                    <li><i class="fab fa-app-store-ios header-regist"></i></li>
                    <li><i class="fab fa-android header-regist"></i></li>
                </ul>
			</li>
		</ul>
	</div>
<% end %>